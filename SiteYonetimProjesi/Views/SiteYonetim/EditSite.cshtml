@model EntityLayer.Concrete.Site
@{
    ViewBag.Title = "EditSite";
    Layout = "~/Views/Shared/_YoneticiLayout.cshtml";
}

@using (Html.BeginForm("EditSite", "SiteYonetim", FormMethod.Post))
{
    <div class="form-group">
        <br />
        @Html.Hidden("Site ID")
        @Html.TextBoxFor(x => x.SiteID, new { style = "display: none" })
        <br />
        @Html.Label("Site Adı")
        @Html.TextBoxFor(x => x.SiteAd, new { @class = "form-control" })<br />
        @Html.Label("Site İl")
        @Html.TextBoxFor(x => x.SiteIl, new { @class = "form-control" })<br />
        @Html.Label("Site Adres")
        @Html.TextBoxFor(x => x.SiteAdres, new { @class = "form-control" })<br />
        @Html.Label("Site Isınma Türü")
        @Html.TextBoxFor(x => x.SiteIsinmaTuru, new { @class = "form-control" })


        <button id="btn1" class="btn btn-success">Güncelle</button>

    </div>


}

