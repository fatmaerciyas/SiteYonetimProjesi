@using EntityLayer.Concrete
@model List<SiteGiderleri>
@{ ViewBag.Title = "Index";
   Layout = "~/Views/Shared/_YoneticiLayout.cshtml"; }

<h3>@ViewBag.SiteAd'nin giderleri</h3>

<table class="table table-hover" id="tbl1">
    <thead>
        <tr>
            <th>Gider</th>
            <th>Gider Ücreti</th>
            <th>Firma</th>
            <th>Tarih
            <th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
    <tr>
        <td>@item.Gider</td>
        <td>@item.GiderUcreti</td>
        <td>@item.Firma</td>
        <td>@item.Tarih</td>

    </tr>
}
    </tbody>
</table>
<br />
<a href="~/SiteGiderleri/AddGider" class="btn btn-danger">Gider Ekle</a>
<a href="~/SiteGiderleri/Filtrele" class="btn btn-success">Filtrele</a>

